{
  "name": "Kintone Portal Designer",
  "version": "2.0.0",
  "default_locale": "en",
  "description": "Kintone Portal Designer",
  "content_scripts": [
    {
      "css": ["css/index.css"],
      "js": ["js/index.js"],
      "matches": [
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*",
        "https://*.kintone.com/k/*",
        "https://*.kintone-dev.com/k/*",
        "https://*.cybozu.cn/k/*",
        "https://*.cybozu-dev.cn/k/*"
      ]
    }
  ],
  "icons": {
    "16": "img/chrome_extension_icon_16x16.png",
    "48": "img/chrome_extension_icon_64x64.png",
    "128": "img/chrome_extension_icon_128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/chrome_extension_icon_16x16.png",
      "48": "img/chrome_extension_icon_64x64.png",
      "128": "img/chrome_extension_icon_128x128.png"
    },
    "default_title": "Kintone Portal Designer",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.cybozu.com/k/*",
    "https://*.cybozu-dev.com/k/*",
    "https://*.kintone.com/k/*",
    "https://*.kintone-dev.com/k/*",
    "https://*.cybozu.cn/k/*",
    "https://*.cybozu-dev.cn/k/*"
  ],
  "web_accessible_resources": [{
    "resources": ["img/*", "html/*", "js/templates/*", "editor.html"],
    "matches": ["<all_urls>"]
  }],
  "manifest_version": 3
}
