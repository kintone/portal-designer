{
  "name": "Kintone Portal Designer",
  "version": "1.9.5",
  "default_locale": "en",
  "description": "Kintone Portal Designer",
  "content_scripts": [
    {
      "css": ["css/index.css"],
      "js": ["js/index.js"],
      "matches": [
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*",
        "https://*.kintone.com/k/*",
        "https://*.kintone-dev.com/k/*",
        "https://*.cybozu.cn/k/*",
        "https://*.cybozu-dev.cn/k/*"
      ]
    }
  ],
  "icons": {
    "16": "img/chrome_extension_icon_16x16.png",
    "48": "img/chrome_extension_icon_64x64.png",
    "128": "img/chrome_extension_icon_128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/chrome_extension_icon_16x16.png",
      "48": "img/chrome_extension_icon_64x64.png",
      "128": "img/chrome_extension_icon_128x128.png"
    },
    "default_title": "Kintone Portal Designer",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "userScripts",
    "storage"
  ],
  "host_permissions": [
    "https://*.cybozu.com/*",
    "https://*.cybozu-dev.com/*",
    "https://*.kintone.com/*",
    "https://*.kintone-dev.com/*",
    "https://*.cybozu.cn/*",
    "https://*.cybozu-dev.cn/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*",
        "html/*",
        "css/*",
        "js/templates/*",
        "editor.html"
      ],
      "matches": [
        "https://*.cybozu.com/*",
        "https://*.cybozu-dev.com/*",
        "https://*.kintone.com/*",
        "https://*.kintone-dev.com/*",
        "https://*.cybozu.cn/*",
        "https://*.cybozu-dev.cn/*"
      ]
    }
  ],
  "minimum_chrome_version": "120",
  "manifest_version": 3
}
